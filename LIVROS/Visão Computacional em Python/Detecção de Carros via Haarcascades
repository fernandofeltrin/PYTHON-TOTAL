# Livro VISÃO COMPUTACIONAL EM PYTHON - FERNANDO FELTRIN https://www.amazon.com.br/dp/B08NTW8TNV

import cv2
import matplotlib.pyplot as plt

classificador_carros = cv2.CascadeClassifier('haarcascade_cars.xml')

imagem = cv2.imread('carros1.jpg', 1)
imagem_cinza = cv2.cvtColor(imagem, cv2.COLOR_BGR2GRAY)

carros = classificador_carros.detectMultiScale(imagem_cinza,
                                               scaleFactor=1.02)

for [x, y, l, a] in carros:
  imagem = cv2.rectangle(imagem,
                         (x,y),
                         (x + l, y + a),
                         (0,0,255),
                         2)

fig = plt.figure(figsize=(10,8))
plt.imshow(imagem)

