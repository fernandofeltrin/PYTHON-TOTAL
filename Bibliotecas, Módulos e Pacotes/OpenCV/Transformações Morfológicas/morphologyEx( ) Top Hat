img = cv2.imread('/content/drive/MyDrive/cafe.jpg')

tophat = cv2.morphologyEx(img,
                            cv2.MORPH_TOPHAT,
                            kernel = np.ones((5,5), np.uint8),
                            iterations = 3,
                            borderType = cv2.BORDER_REPLICATE,
                            borderValue = 255)

plt.figure(figsize=(8, 4))

plt.subplot(1, 2, 1)
plt.title('Imagem Original')
plt.imshow(cv2.cvtColor(img, cv2.COLOR_BGR2RGB))
plt.axis('off')

plt.subplot(1, 2, 2)
plt.title('Top Hat')
plt.imshow(cv2.cvtColor(tophat, cv2.COLOR_BGR2RGB))
plt.axis('off')

plt.tight_layout()
plt.show()
